<%= form_for(@task, url: tasks_new_path) do |f| %>

<%= f.label :action, class:'action-menu' %>
<%= f.select(:action, options_for_select(Task::ACTIONS, :action)) %>

<%= f.label :room, class: 'room-menu' %>
<%= f.select(:room, options_for_select(Task::ROOMS, :room)) %>

<%= f.label :surface, class: 'surface-menu' %>
<%= f.select(:surface, options_for_select(Task::SURFACES, :surface)) %>

<%= f.label :option, class: 'task-option' %>
<%= f.text_field :option %>

<%= f.submit "Fin!", class: 'submit task-submit' %>

<% end %>
